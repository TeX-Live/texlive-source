test "x$LN_S" = 'xln -s' || exit 77

rm -f _test_file _test_symlink

touch _test_file

$LN_S _test_file _test_symlink || exit 1

./kpsereadlink _test_file && exit 1

link=`./kpsereadlink _test_symlink` || exit 1

test "x$link" = x_test_file || exit 1

rm -f _test_file _test_symlink
