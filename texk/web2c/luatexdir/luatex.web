function prev_rightmost(s, e: pointer): pointer;
{finds the node preceding the rightmost node |e|; |s| is some node
before |e|}
var p: pointer;
begin
    prev_rightmost := null;
    p := s;
    if p = null then
        return;
    while vlink(p) <> e do begin
        p := vlink(p);
        if p = null then
            return;
    end;
    prev_rightmost := p;
end;

procedure pdf_check_obj(t, n: integer);
