            print_char("*")
@.*\relax@>
          else print_font_identifier(font(p));
          print_char(" "); font_in_short_display:=font(p);
          end;
        print(qo(character(p)));
      end;
    end
  else @<Print a short indication of the contents of node |p|@>;
  p:=vlink(p);
  end;
end;

